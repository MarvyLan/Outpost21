if string_length(tooltip_text) &gt; 0 {
    //draw bg
    var bg_sections = floor(string_width(string(tooltip_text)+string(network_query))/8);
    var xx = (8*bg_sections)/2; //leftside offset
    for (var i = 0; i&lt;bg_sections; i+=1)
    {
        if i == 0               draw_sprite_ext(spr_tooltip_template,0,mouse_guix-8-xx,         mouse_guiy+32,1,1,0,image_blend,image_alpha);
        
                                draw_sprite_ext(spr_tooltip_template,1,mouse_guix-xx+(i*8),     mouse_guiy+32,1,1,0,image_blend,image_alpha);
        
        if i == (bg_sections-1) draw_sprite_ext(spr_tooltip_template,2,mouse_guix-xx+8+(i*8),   mouse_guiy+32,1,1,0,image_blend,image_alpha);
    }
    
    //draw text
    draw_text_colour(mouse_guix-xx-2,mouse_guiy+36,string(tooltip_text)+string(network_query),c_black,c_black,c_black,c_black,max(image_alpha,0));

    //security dots
    for (var i=0; i&lt;array_length_1d(list_security_dots); i+=1)
    {
        //the array stores the colors! -1 skips drawing
        if list_security_dots[ i] != -1 {
            draw_sprite_ext(spr_securitydots,0,mouse_guix-4-xx+(i*10),mouse_guiy+32+15,1,1,0, list_security_dots[ i],image_alpha);
        }
    }
}

image_alpha = clamp(image_alpha-0.05,-0.5,0.80);
