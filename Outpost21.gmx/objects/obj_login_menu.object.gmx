          <argument>
            <kind>1</kind>
            <string>draw_sprite(spr_loginbox,0,x,y);

//user name
var text_ender = "";
if current_selection == 0 and current_time mod 120 &lt; 60 text_ender = "|";
var drawtext = string_copy( input_array[0,0] , max( 0 , string_length(input_array[0,0])-20 ) , min( string_length(input_array[0,0]) , 21 ) );
draw_text(x+32,y+48, drawtext + text_ender);

//password and censoring
var text_ender = "";
if current_selection == 1 and current_time mod 120 &lt; 60 text_ender = "|";
var drawtext = string_copy( input_array[1,0] , max( 0 , string_length(input_array[1,0])-20 ) , min( string_length(input_array[1,0]) , 21 ) );
var password_string = "";
while string_length(password_string) &lt; string_length(drawtext) password_string += "*";
draw_text(x+32,y+96,password_string + text_ender);


//text boxes
if point_in_rectangle(mouse_x,mouse_y,x+32,y+48,x+288,y+64) == true {
    if mouse_check_button_pressed(mb_left) {
        current_selection = 0;
    }
}
else if point_in_rectangle(mouse_x,mouse_y,x+32,y+96,x+288,y+112) == true {
    if mouse_check_button_pressed(mb_left) {
        current_selection = 1;
    }
}
else
{
    if mouse_check_button_pressed(mb_left) current_selection = -1;
}

//typing control
input_array = scr_textbox_input(input_array,current_selection);

//button press
if point_in_rectangle(mouse_x,mouse_y,x+304,y+96,x+361,y+112) == true {
    if mouse_check_button_pressed(mb_left) {
        draw_sprite(spr_confirmbutton_press,1,x+304,y+96);
    }
    else if mouse_check_button_released(mb_left) {
        draw_sprite(spr_confirmbutton_press,1,x+304,y+96);
        //do action
        if string_length(input_array[0,0]) &gt; 0 and string_length(input_array[1,0]) &gt; 0 {
            //get data
            var get_username = input_array[0,0];
            var get_password = input_array[1,0];
        
            //password salt and encode!
            var get_password = md5_string_unicode( string(get_password) + md5_string_unicode( string(input_array[0,1]) + string(input_array[1,1]) + get_username) + string(input_array[1,1]) );
            
            //update default
            ini_open(global.config_file_path);
                ini_write_string("USER","LUN",get_username);
            ini_close();
            
            //transmit
            scr_spacket_login_request(get_username,get_password);
            //done, clear entity and trigger server alarm
            with obj_client alarm[1] = 300;
        }
    }
    else draw_sprite(spr_confirmbutton_press,0,x+304,y+96);
}


//cancel button
if point_in_rectangle(mouse_x,mouse_y,x+304,y+48,x+361,y+64) == true {
    if mouse_check_button_pressed(mb_left) {
        draw_sprite(spr_cancelbutton_press,1,x+304,y+48);
    }
    else if mouse_check_button_released(mb_left) {
        draw_sprite(spr_cancelbutton_press,1,x+304,y+48);
        //do action
        game_restart();
    }
    else draw_sprite(spr_cancelbutton_press,0,x+304,y+48);
}
</string>
